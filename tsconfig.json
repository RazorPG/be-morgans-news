{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/"]
}
